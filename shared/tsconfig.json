{
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "node16",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "types": ["node"],
    "paths": {
      "@shared/*": ["../shared/src/*"],
    },
    "declaration": true,
    "outDir": "../dist/shared/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}


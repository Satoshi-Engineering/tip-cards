{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/locales/**/*.json",
    "../shared/src/**/*",
    "../backend/src/**/*",
    "../backend/drizzle.config.ts",
    "tests/components/**/*.ts",
    "tests/units/**/*.ts",
  ],
  "exclude": [
    "tests/components/**/*.ts",
    "tests/units/**/*.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"],
      "@backend/*": ["../backend/src/*"],
    },
    "target": "ES2022",
    "typeRoots": [
      "./src/types",
      "../node_modules/@types",
    ],
    "outDir": "../dist/frontend",
    "rootDir": "../",
  },
}
